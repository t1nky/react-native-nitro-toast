{
  "name": "react-native-nitro-toast",
  "version": "1.2.6",
  "description": "A lightweight toast message library for React Native built with Nitro modules.",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/index.d.ts",
  "source": "./src/index",
  "files": [
    "src",
    "lib/commonjs",
    "lib/module",
    "lib/typescript",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "react-native.config.js",
    "nitrogen",
    "android/build.gradle",
    "android/gradle.properties",
    "android/CMakeLists.txt",
    "android/src",
    "ios/**/*.h",
    "ios/**/*.m",
    "ios/**/*.mm",
    "ios/**/*.cpp",
    "ios/**/*.swift",
    "ios/Assets.xcassets",
    "app.plugin.js",
    "*.podspec",
    "README.md"
  ],
  "scripts": {
    "postinstall": "tsc || exit 0;",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "format:ios": "swiftformat ios/",
    "format:android": "ktlint -F android/src/**/*.kt",
    "clean": "rm -rf android/build node_modules/**/android/build lib",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "typescript": "tsc",
    "specs": "typescript && nitro-codegen --logLevel=\"debug\"",
    "release": "release-it",
    "prepare": "bob build"
  },
  "keywords": [
    "react-native",
    "nitro",
    "toast",
    "react-native-toast",
    "toast-notification"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiethuynh0904/react-native-nitro-toast.git"
  },
  "author": "Kiet Huynh <kiethuynh0904@gmail.com> (https://github.com/kiethuynh0904)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kiethuynh0904/react-native-nitro-toast/issues"
  },
  "homepage": "https://github.com/kiethuynh0904/react-native-nitro-toast#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@react-native/eslint-config": "0.78.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.0.6",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "nitro-codegen": "*",
    "prettier": "^3.6.1",
    "react": "19.0.0",
    "react-native": "0.78.2",
    "react-native-builder-bob": "^0.30.0",
    "react-native-nitro-modules": "*",
    "release-it": "^19.0.3",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-nitro-modules": "*"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "semi": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  }
}
